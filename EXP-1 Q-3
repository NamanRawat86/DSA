#include <stdio.h>

int main() {
    int r, c;
    printf("Enter rows and cols: ");
    scanf("%d %d", &r, &c);

    int mat[r][c];
    printf("Enter matrix elements:\n");
    for (int i=0; i<r; i++)
        for (int j=0; j<c; j++)
            scanf("%d", &mat[i][j]);

    // Row sums
    for (int i=0; i<r; i++) {
        int sum = 0;
        for (int j=0; j<c; j++) sum += mat[i][j];
        printf("Row %d sum = %d\n", i+1, sum);
    }

    // Column sums
    for (int j=0; j<c; j++) {
        int sum = 0;
        for (int i=0; i<r; i++) sum += mat[i][j];
        printf("Col %d sum = %d\n", j+1, sum);
    }
    return 0;
}
