#include <stdio.h>

int main() {
    int n, key;
    printf("Enter size of array: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter elements:\n");
    for (int i=0; i<n; i++) scanf("%d", &arr[i]);

    printf("Enter number to search: ");
    scanf("%d", &key);

    int found = 0;
    for (int i=0; i<n; i++) {
        if (arr[i] == key) {
            printf("Success! Found at position %d\n", i+1);
            found = 1;
            break;
        }
    }
    if (!found) printf("Failure! Not found.\n");
    return 0;
}
